<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>AlexTripAgencyManagementSystem</display-name>

  <!-- Session Configuration -->
  <session-config>
    <session-timeout>30</session-timeout> <!-- Session timeout in minutes -->
  </session-config>

  <!-- MIME Type Mapping -->
  <mime-mapping>
    <extension>json</extension>
    <mime-type>application/json</mime-type>
  </mime-mapping>

  <!-- Servlet Mapping for Login -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>Servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- Default Redirect Servlet -->
  <servlet>
    <servlet-name>DefaultRedirect</servlet-name>
    <servlet-class>Servlet.DefaultRedirect</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DefaultRedirect</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <!-- Welcome File -->
  <welcome-file-list>
    <welcome-file>homepage</welcome-file>
  </welcome-file-list>

  <!-- JSP Compiler Settings for Java 21 -->
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <el-ignored>false</el-ignored>
      <scripting-invalid>false</scripting-invalid>
      <is-xml>false</is-xml>
      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>

  <!-- Java version configuration -->
  <context-param>
    <param-name>compilerSourceVM</param-name>
    <param-value>21</param-value>
  </context-param>
  <context-param>
    <param-name>compilerTargetVM</param-name>
    <param-value>21</param-value>
  </context-param>

</web-app>